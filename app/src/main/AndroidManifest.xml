<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unvired.sample.rest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.StartUpActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.HomeActivity" />

        <!-- ==========================  Framework Screens  ======================================== -->
        <activity
            android:name="com.unvired.ui.LoginActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|layoutDirection" />
        <activity
            android:name="com.unvired.ui.Home"
            android:label="Settings"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.unvired.ui.ApplicationStatusTabPage"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.unvired.ui.InfoMessagesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.unvired.ui.InfoMessageDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.unvired.ui.SystemCredentials"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.unvired.ui.SystemCredential"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.unvired.ui.AboutUsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.unvired.ui.DemoModeSelectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.unvired.ui.ServerErrorMessageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.unvired.ui.VersionUpgradeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.unvired.ui.ErrorMessageActivity"
            android:screenOrientation="portrait" />

        <!-- =============================  ***************  ====================================== -->
    </application>

</manifest>